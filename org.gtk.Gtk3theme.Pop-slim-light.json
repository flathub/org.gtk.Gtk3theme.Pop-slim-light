{
  "id": "org.gtk.Gtk3theme.Pop-slim-light",
  "branch": "3.22",
  "runtime": "org.freedesktop.Platform",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "18.08",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Pop",
      "buildsystem": "simple",
      "build-commands": [
        "ar x pop-gtk-theme.deb",
        "tar -xf data.tar.xz",

        "install -dm755 /usr/share/runtime/share/themes/Pop-slim-light/gtk-3.0",
        "cp -aL usr/share/themes/Pop-slim-light/gtk-3.22/* /usr/share/runtime/share/themes/Pop-slim-light/gtk-3.0",
        "cp -a usr/share/themes/Pop-slim-light/index.theme /usr/share/runtime/share/themes/Pop-slim-light"
      ],
      "sources": [
        {
            "type": "file",
            "url": "https://launchpad.net/~system76/+archive/ubuntu/pop/+files/pop-gtk-theme_4.1.3~1550077073~18.10~dac4908_all.deb",
            "dest-filename": "pop-gtk-theme.deb",
            "sha256": "088f55ad3d4f239e33772e44e48f47173abc67a1a3326a4e028cd430b6346a5e"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Pop-slim-light.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Pop-slim-light --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Pop-slim-light"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Pop-slim-light.appdata.xml"
        }
      ]
  }
  ]
}
